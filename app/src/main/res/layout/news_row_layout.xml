<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvNews"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/eight_dp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/eight_dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivNews"
            android:layout_width="@dimen/one_twenty_dp"
            android:layout_height="@dimen/one_twenty_dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/default_image"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_light_font"
            android:textStyle="bold"
            android:text="This is title"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/ivNews"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/five_dp"
            android:textSize="@dimen/sixteen_sp"
            android:maxLines="2"
            android:layout_marginEnd="@dimen/five_dp"
            android:layout_marginTop="@dimen/three_dp"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_light_font"
            android:text="This is the description for above title fsddis sdguydgs gd sdgds ds ddgytds dsytsyst dsysd s"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/ivNews"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            android:layout_marginStart="@dimen/five_dp"
            android:textSize="@dimen/fourteen_sp"
            android:maxLines="3"
            android:layout_marginEnd="@dimen/five_dp"
            android:layout_marginTop="@dimen/three_dp"/>

        <TextView
            android:id="@+id/tvAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura_light_font"
            android:textColor="@color/design_default_color_primary"
            app:layout_constraintEnd_toEndOf="@id/tvDescription"
            app:layout_constraintTop_toBottomOf="@id/tvDescription"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="@dimen/fourteen_sp"
            android:layout_marginEnd="@dimen/ten_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:textStyle="bold"
            android:maxLines="1"
            android:maxLength="50"
            android:layout_marginBottom="@dimen/five_dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>